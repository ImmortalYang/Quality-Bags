@model QualityBags.Models.Order

@{
    ViewData["Title"] = "Purchased";
}

<h2><span class="glyphicon glyphicon-saved"></span>Thank you For Your Purchase!</h2>

<div>
    <h4>The following order will be dispatched as per the details below.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ApplicationUser.FirstName)</dt>
        <dd>@Html.DisplayFor(model => model.ApplicationUser.FirstName)</dd>
        <dt>@Html.DisplayNameFor(model => model.ApplicationUser.LastName)</dt>
        <dd>@Html.DisplayFor(model => model.ApplicationUser.LastName)</dd>

        <dt>@Html.DisplayNameFor(model => model.ApplicationUser.Email)</dt>
        <dd>@Html.DisplayFor(model => model.ApplicationUser.Email)</dd>
        <dt>@Html.DisplayNameFor(model => model.ApplicationUser.PhoneNumber)</dt>
        <dd>@Html.DisplayFor(model => model.ApplicationUser.PhoneNumber)</dd>
        <dt>@Html.DisplayNameFor(model => model.ApplicationUser.Address)</dt>
        <dd>@Html.DisplayFor(model => model.ApplicationUser.Address)</dd>
        
        <dt>@Html.DisplayNameFor(model => model.City)</dt>
        <dd>@Html.DisplayFor(model => model.City)</dd>
        <dt>@Html.DisplayNameFor(model => model.State)</dt>
        <dd>@Html.DisplayFor(model => model.State)</dd>
        <dt>@Html.DisplayNameFor(model => model.Country)</dt>
        <dd>@Html.DisplayFor(model => model.Country)</dd>
        <dt>@Html.DisplayNameFor(model => model.PostalCode)</dt>
        <dd>@Html.DisplayFor(model => model.PostalCode)</dd>

        <dt>@Html.DisplayNameFor(model => model.Subtotal)</dt>
        <dd>$@Html.DisplayFor(model => model.Subtotal)</dd>
        <dt>@Html.DisplayNameFor(model => model.GST)</dt>
        <dd>$@Html.DisplayFor(model => model.GST)</dd>
        <dt>@Html.DisplayNameFor(model => model.GrandTotal)</dt>
        <dd>$@Html.DisplayFor(model => model.GrandTotal)</dd>

        <dt>@Html.DisplayNameFor(model => model.OrderDate)</dt>
        <dd>@Html.DisplayFor(model => model.OrderDate)</dd>
        
        <dt>Order Details</dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Product</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                </tr>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>
                            @item.Product.ProductName
                        </td>
                        <td>
                            $@item.UnitPrice
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            $@(item.UnitPrice*item.Quantity)
                        </td>
                    </tr>
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td>
                        <label>Total:</label>
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => Model.GrandTotal)
                    </td>
                </tr>
            </table>

        </dd>
    </dl>
</div>

