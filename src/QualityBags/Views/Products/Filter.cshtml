<!-- Partial View for products list filter -->
<form class="form-inline" asp-action="Index" method="get">
    <div class="form-group">
        <label for="searchString">Search by Name: </label>
        <input class="form-control" type="text" name="searchString" value="@ViewData["searchString"]" />
        
    </div>
    <div class="form-group">
        <label for="sortBy">Sort By: </label>
        <select class="form-control" name="sortBy" asp-items="ViewBag.sortBy"></select>
    </div>
    <div class="form-group">
        <label>Order: </label>
        <select class="form-control" name="order" asp-items="ViewBag.order"></select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Apply Filter</button> | 
        <a class="btn btn-default" asp-action="Index" asp-controller="Products">Back to Full List</a>
     </div>
</form>
<hr />